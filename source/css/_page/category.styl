.page-category .content {
  font-size: 16px;
  .tag-cloud-title,
  .category-title {
    margin: 50px 0 30px 0;
    font-size: 1.4em;
    line-height: 2.2em;
    font-weight: bold;
    text-align: center;
    border-bottom: 1px dashed #ddd;
  }
  .tag-cloud-tags {
    a {
      display: inline-block;
      margin: 10px;
      border-bottom: 1px solid #999;
    }
  }
  .category-link {
    display: inline-block;
    padding: 5px 10px;
    margin: 0 20px 20px 0;
    border: 1px solid #ddd;
    border-radius: 4px;
  }
  .category-link:hover {
    color: #fff;
    background: #f09;
    border: 1px solid #fff;
  }
}